@await Html.PartialAsync("TopBarWide")
@section scripts {
@Html.Raw(Render.Script("topBar"))
@Html.Raw(Render.Script("homeWide"))
@Html.Raw(Render.Script("streaming"))
}


<div id="streamingPanes">
    <div id="streamingLeftPane">
        <div id="rokuBrowserPane" class="rokuBrowserPane @(ViewBag.HideRokuClass ?? "")">
            <div class="rokuBrowserItems" id="rokuBrowserItems">
                @await Html.PartialAsync("BrowserPane")
            </div>
        </div>
    </div>

    <div id="streamingRightPane">
        <div id="rokuControlsPane" class="rokuControlsPane @(ViewBag.HideRokuClass ?? "")">
            <div class="rokuControls">
                @await Html.PartialAsync("RokuControlsPane")
            </div>
        </div>
        <div id="smartControlsPane" class="smartControlsPane @(ViewBag.HideSmartClass ?? "")">
            <div class="smartControls">
                @await Html.PartialAsync("SmartControlsPane")
            </div>
        </div>
    </div>
</div>