@if (Running.RunningProgram == "Roku")
{
    <br />
    <br />
    <table class="width100">
        <tr>
            <td align="center" class="width60">
                <table>
                    <tr>
                        <td>&nbsp;</td>
                        <td class="centeredButton"><span id="btnUp" alt="">@Html.Raw(Button.BigRound("Nav.Up"))</span></td>
                        <td>&nbsp;</td>
                    </tr>
                    <tr>
                        <td class="centeredButton"><span id="btnLeft" alt="">@Html.Raw(Button.BigRound("Nav.Left"))</span></td>
                        <td class="centeredButton"><span id="btnOk">@Html.Raw(Button.BigRound("OK"))</span></td>
                        <td class="centeredButton"><span id="btnRight" alt="">@Html.Raw(Button.BigRound("Nav.Right"))</span></td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td class="centeredButton"><span id="btnDown" alt="">@Html.Raw(Button.BigRound("Nav.Down"))</span></td>
                        <td>&nbsp;</td>
                    </tr>
                </table>
            </td>
            <td class="centeredButton width10"></td>
            <td class="centeredButton width30">
                <table>
                    <tr>
                        <td>&nbsp;</td>
                    </tr>
                    <tr>
                        <td class="centeredButton"><span id="btnHome">@Html.Raw(Button.BigRound("Home"))</span></td>
                    </tr>
                    <tr>
                        <td class="centeredButton"><span id="btnStar">@Html.Raw(Button.BigRound("Star"))</span></td>
                    </tr>
                    <tr>
                        <td class="centeredButton"><span id="btnBack">@Html.Raw(Button.BigRound("Back"))</span></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <br />
    <br />
    <table class="width100">
        <tr>
            <td class="centeredButton width30"><span id="btnRepeat" alt="">@Html.Raw(Button.Square("Repeat"))</span></td>
            <td class="centeredButton width20"><span id="btnPrev" alt="">@Html.Raw(Button.Square("Rewind"))</span></td>
            <td class="centeredButton width30"><span id="btnPlayPause">@Html.Raw(Button.Rect("PlayPause"))</span></td>
            <td class="centeredButton width20"><span id="btnNext" alt="">@Html.Raw(Button.Square("FastForward"))</span></td>
        </tr>
    </table>

    <table class='width100'>
        <tr>
            <td class="musicPlaybackStatus width50">&nbsp;</td>
            <td class="musicPlaybackStatus width30" id="RokuPositionDisplay">&nbsp;</td>
            <td class="musicPlaybackStatus width20">&nbsp;</td>
        </tr>
        <tr>
            <td class="musicPlaybackStatus width50">&nbsp;</td>
            <td class="musicPlaybackStatus width30" id="RokuState">&nbsp;</td>
            <td class="musicPlaybackStatus width20">&nbsp;</td>
        </tr>
    </table>
}
