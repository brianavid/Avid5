@await Html.PartialAsync("TopBar")
@section scripts {
    @Html.Raw(Render.Script("topBar"))
    @Html.Raw(Render.Script("home"))
    @Html.Raw(Render.Script("streaming"))
}

<table class="buttonRow">
    <tr>
        <td class="centeredButton"><span id="goRokuSelect">@Html.Raw(Button.ShortRect("Roku"))</span></td>
        <td class="centeredButton"><span id="goChromecastSelect">@Html.Raw(Button.ShortRect("Cast"))</span></td>
        <td class="centeredButton"><span id="goChromecastAudioSelect">@Html.Raw(Button.ShortRect("Audio"))</span></td>
        <td class="centeredButton"><span id="goSmartTvSelect">@Html.Raw(Button.ShortRect("Smart"))</span></td>
    </tr>
</table>

<div class="@(ViewBag.HideStreamGuidanceClass ?? "")">
    <p>Recommendations:</p>
    <ul>
        <li>Use <strong>Roku</strong> for Amazon Prime, Netflix and TV catchup services</li>
        <li>Use <strong>Cast</strong> for YouTube, Curzon Home Cinema and other video content sent to Chromecast from a player on the phone or tablet</li>
        <li>Use <strong>Audio</strong> for audio-only content sent to Chromecast from a player on the phone or tablet</li>
        <li>Use <strong>Smart</strong> for controlling the TV with its own remote control</li>
    </ul>
</div>

<div class="@(ViewBag.HideSmartClass ?? "")">
    <p>Control the TV with its own remote control - start with the "Home" button</p>
</div>

<div id="rokuBrowserPane" class="rokuBrowserPane @(ViewBag.HideRokuClass ?? "")">
    <div class="rokuBrowserItems" id="rokuBrowserItems">
        @await Html.PartialAsync("BrowserPane")
    </div>
</div>
