<div class="securityZoneItems">
    @foreach (var zone in Security.GetZoneNames())
    {
        <div class="securityZoneItem" id="@zone">
            <span class="securityZoneButtons startHidden">
                <span class="securityZoneOn" id="@zone">@Html.Raw(Button.MiniRound("[[Thumb_Up]]", "buttonGreen"))</span>
                <span class="securityZoneOff" id="@zone">@Html.Raw(Button.MiniRound("[[Thumb_Down]]", "buttonRed"))</span>
            </span>
            <div class="securityZoneName">
                @zone
            </div>
        </div>
    }
</div>
