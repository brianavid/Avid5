@{
    ViewBag.Title = "Photo";
}

@await Html.PartialAsync("TopBarWide")
@section scripts {
    @Html.Raw(Render.Script("topBar"))
    @Html.Raw(Render.Script("homeWide"))
    @Html.Raw(Render.Script("photos"))
}

<div id="photosPanes">
    <div id ="photosLeftPane">
       <div id="photosBrowserPane">
            <div class="photosBrowserItems" id="photosBrowserItems">
                @await Html.PartialAsync("BrowserPane")
            </div>
        </div>
    </div>

    <div id ="photosRightPane">
         <div id="photosImagesPane">
            <div class="photosImagesGrid" id="photosImagesGrid">
                @await Html.PartialAsync("ImagesPane")
            </div>
        </div>

        <div id="photosDisplayPane">
            <div class="photosDisplay">
                @await Html.PartialAsync("DisplayPane")
            </div>        
        </div>
    </div>
</div>

