<table class="width100">
	<tr>
		<td align="center" class="width60">
		<table>
			<tr>
				<td>&nbsp;</td>
				<td class="centeredButton"><span id="btnUp" alt="">@Html.Raw(Button.BigRound("[[Arrow_Upward]]"))</span></td>
				<td>&nbsp;</td>
			</tr>
			<tr>
				<td class="centeredButton"><span id="btnLeft" alt="">@Html.Raw(Button.BigRound("[[Arrow_Back]]"))</span></td>
				<td>&nbsp;</td>
				<td class="centeredButton"><span id="btnRight" alt="">@Html.Raw(Button.BigRound("[[Arrow_Forward]]"))</span></td>
			</tr>
			<tr>
				<td>&nbsp;</td>
				<td class="centeredButton"><span id="btnDown" alt="">@Html.Raw(Button.BigRound("[[Arrow_Downward]]"))</span></td>
				<td>&nbsp;</td>
			</tr>
		</table>
		</td>
		<td class="centeredButton width10"></td>
		<td class="centeredButton width30">
		    <table>
			    <tr>
				    <td>&nbsp;</td>
			    </tr>
			    <tr>
				    <td class="centeredButton"><span id="btnPlus" alt="">@Html.Raw(Button.BigRound("+"))</span></td>
			    </tr>
			    <tr>
				    <td>&nbsp;</td>
			    </tr>
			    <tr>
				    <td class="centeredButton"><span id="btnMinus" alt="">@Html.Raw(Button.BigRound("-"))</span></td>
			    </tr>
		    </table>
		</td>
	</tr>
</table>
<br />
<br />
<table class="width100">
	  <tr>
        <td class="centeredButton width25"><span id="btnPrev" alt="">@Html.Raw(Button.Square("[[Skip_Previous]]"))</span></td>
		<td class="centeredButton width50"><span id="btnPlayPause">@Html.Raw(Button.Rect("[[Play_Arrow]][[Pause]]"))</span></td>
        <td class="centeredButton width25"><span id="btnNext" alt="">@Html.Raw(Button.Square("[[Skip_Next]]"))</span></td>
	  </tr>
</table>
