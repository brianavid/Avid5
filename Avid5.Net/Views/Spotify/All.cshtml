@{
    ViewBag.Title = "Spotify";
}

@await Html.PartialAsync("TopBarWide")
@section scripts {
    @Html.Raw(Render.Script("topBar"))
    @Html.Raw(Render.Script("homeWide"))
    @Html.Raw(Render.Script("spotify"))
}

<script type="text/javascript">var JrmcUrl = '@JRMC.Url'; var JrmcHost = '@JRMC.Host';</script>

<div id="spotifyPanes">
    <div id ="spotifyLeftPane">
       <div id="spotifyBrowserPane">
            @await Html.PartialAsync("BrowserSearchPane")
            <div class="spotifyBrowserItems" id="spotifyBrowserItems">
                @await Html.PartialAsync("BrowserPane")
            </div>
        </div>
    </div>

    <div id ="spotifyRightPane">
         <div id="spotifyQueuePane">
            <div class="spotifyPlaybackQueueItems" id="spotifyPlaybackQueueItems">
                @await Html.PartialAsync("QueuePane")
            </div>
        </div>

        <div id="spotifyControlPane">
            <div class="spotifyPlayback">
                @await Html.PartialAsync("PlayingPane")
            </div>        
        </div>
    </div>
</div>
