@{
    ViewBag.Title = "TV";
}

@await Html.PartialAsync("TopBarWide")
@section scripts {
    @Html.Raw(Render.Script("topBar"))
    @Html.Raw(Render.Script("homeWide"))
    @Html.Raw(Render.Script("tv"))
}

<div id="tvPanes">
    <div id ="tvLeftPane">
        <table class="buttonRow">
	        <tr>
	            <td class="centeredButton">	<span id="displayTvTv">@Html.Raw(Button.Rect("TV"))</span></td>
	            <td class="centeredButton">	<span id="displayTvRadio">@Html.Raw(Button.Rect("Radio"))</span></td>
            </tr>
        </table>

        <div id="tvChannelsPane">
            <div id="tvChannels" class="tvChannels">
                @await Html.PartialAsync("ChannelsPane")
            </div>
        </div>
    </div>
    <div id ="tvRightPane">
        <div class="tvControlPane" id="tvControlPane">
            @await Html.PartialAsync("ControlPane")
        </div>
    </div>
</div>
