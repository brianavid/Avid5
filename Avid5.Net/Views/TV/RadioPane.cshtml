@{
    var channels = VideoTV.AllRadioChannels;
    foreach (var channel in channels)
    {
        <div class="tvChannel" id="@channel.Key">
            <div class="tvChannelName">
                <img height="40" src="/Tv/GetChannelLogo?channelKey=@channel.Key" />
                @channel.Name
            </div>
            <div class="tvChannelNowNext">
                @if (channel.IsFavourite)
                {
                    var nowAndNext = VideoTV.GetNowAndNext(channel);
                    foreach (var programme in nowAndNext)
                    {
                        <div class="tvProgrammeInfo">@(programme.StartTime.ToLocalTime().ToString("HH:mm"))) @programme.Title</div>
                    }
                }
                else
                {
                    <text>&nbsp;</text>
                }
            </div>
        </div>
    }
}