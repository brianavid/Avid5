@{
    ViewBag.Title = "Video";
}

@await Html.PartialAsync("TopBarWide")
@section scripts {
    @Html.Raw(Render.Script("topBar"))
    @Html.Raw(Render.Script("homeWide"))
    @Html.Raw(Render.Script("video"))
}

<div id="videoPanes">
    <div id ="videoLeftPane">
        <table class="buttonRow">
	        <tr>
                <td class="centeredButton">	<img id="displayVideoRecordings" src="/Content/Buttons/Select.TV.Button.png" /></td>
                <td class="centeredButton">	<img id="displayVideos" src="/Content/Buttons/Select.Video.Button.png" /></td>
	            <td class="centeredButton">	<img id="displayDVDs" src="/Content/Buttons/Select.DVD.Button.png" /></td>
            </tr>
        </table>

        <div class="videoRecordings" id="videoRecordings">
            @await Html.PartialAsync("RecordingsPane")
        </div>
        <div class="videoVideos" id="videoVideos" style="display:none">
            @await Html.PartialAsync("VideosPane")
        </div>
        <div class="videoDvds" id="videoDvds" style="display:none">
            @await Html.PartialAsync("DVDsPane")
        </div>
    </div>

    <div id ="videoRightPane">
        <div class="videoWatchPane" id="videoWatchPane">
            @await Html.PartialAsync("WatchPane")
        </div>
    </div>
</div>
